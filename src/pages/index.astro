---
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/global.css";
import { schoolInfo, dashboardStats, announcements } from "../data/mockData";
import Scene3D from "../components/3d/Scene3D.jsx";
import { TiltCard } from "../components/ui/Components.jsx";
---

<MainLayout
	title="Unity Secondary School - Modern Education for Tomorrow's Leaders"
>
	<!-- Navigation -->
	<nav
		class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-neutral-900/80 backdrop-blur-xl border-b border-neutral-200 dark:border-neutral-800"
	>
		<div class="container mx-auto px-4">
			<div class="flex items-center justify-between h-16">
				<!-- Logo -->
				<a href="/" class="flex items-center gap-3">
					<div
						class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-500 to-primary-700 flex items-center justify-center text-white font-bold text-lg shadow-lg shadow-primary-500/30"
					>
						U
					</div>
					<span
						class="font-display font-bold text-xl text-neutral-900 dark:text-white hidden sm:block"
					>
						Unity Secondary School
					</span>
				</a>

				<!-- Desktop Navigation -->
				<div class="hidden md:flex items-center gap-8">
					<a
						href="#about"
						class="text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 font-medium transition-colors"
						>About</a
					>
					<a
						href="#features"
						class="text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 font-medium transition-colors"
						>Features</a
					>
					<a
						href="#announcements"
						class="text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 font-medium transition-colors"
						>News</a
					>
					<a
						href="#contact"
						class="text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 font-medium transition-colors"
						>Contact</a
					>
				</div>

				<!-- Actions -->
				<div class="flex items-center gap-3">
					<button
						id="theme-toggle"
						class="p-2.5 rounded-xl hover:bg-neutral-100 dark:hover:bg-neutral-800 text-neutral-600 dark:text-neutral-400 transition-colors"
					>
						<svg
							class="w-5 h-5 hidden dark:block"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
							></path>
						</svg>
						<svg
							class="w-5 h-5 dark:hidden"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
							></path>
						</svg>
					</button>
					<a href="/login" class="btn-primary"> Login to Portal </a>
				</div>
			</div>
		</div>
	</nav>

	<!-- Hero Section -->
	<section
		class="relative min-h-screen flex items-center pt-16 overflow-hidden"
	>
		<!-- Background gradient -->
		<div
			class="absolute inset-0 bg-gradient-to-br from-primary-50 via-white to-secondary-50 dark:from-neutral-950 dark:via-neutral-900 dark:to-primary-950"
		>
		</div>

		<!-- 3D Scene -->
		<Scene3D client:load />

		<div class="relative container mx-auto px-4 py-20 z-10">
			<div class="grid lg:grid-cols-2 gap-12 items-center">
				<!-- Left Content -->
				<div class="text-center lg:text-left animate-fade-in">
					<span
						class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-400 rounded-full text-sm font-medium mb-6 backdrop-blur-sm"
					>
						<span
							class="w-2 h-2 bg-primary-500 rounded-full animate-pulse"
						></span>
						{schoolInfo.currentSession} Academic Session
					</span>

					<h1
						class="font-display text-display-lg md:text-5xl lg:text-6xl font-bold text-neutral-900 dark:text-white mb-6"
					>
						Empowering
						<span class="text-gradient">African Minds</span>
						for Tomorrow
					</h1>

					<p
						class="text-lg text-neutral-600 dark:text-neutral-400 mb-8 max-w-xl mx-auto lg:mx-0"
					>
						A modern school management portal designed for African
						secondary schools. Track results, manage fees, and stay
						connected with your child's education journey.
					</p>

					<div
						class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
					>
						<a
							href="/login"
							class="btn-primary text-lg px-8 py-4 shadow-lg shadow-primary-500/20 hover:shadow-primary-500/40 transition-shadow"
						>
							<svg
								class="w-5 h-5"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"
								></path>
							</svg>
							Access Portal
						</a>
						<a
							href="#about"
							class="btn-outline text-lg px-8 py-4 backdrop-blur-sm bg-white/50 dark:bg-black/20"
						>
							Learn More
						</a>
					</div>
				</div>

				<!-- Right - Stats Cards -->
				<div class="grid grid-cols-2 gap-4 animate-slide-up">
					<TiltCard
						client:visible
						className="col-span-2 sm:col-span-1 !bg-gradient-to-br !from-primary-500 !to-primary-700 !text-white !border-0 p-6"
					>
						<div class="text-4xl font-bold">
							{
								dashboardStats.admin.totalStudents.toLocaleString()
							}+
						</div>
						<div class="text-primary-100 mt-1">
							Students Enrolled
						</div>
					</TiltCard>
					<TiltCard
						client:visible
						className="col-span-2 sm:col-span-1 !bg-gradient-to-br !from-secondary-500 !to-secondary-700 !text-white !border-0 p-6"
					>
						<div class="text-4xl font-bold">
							{dashboardStats.admin.totalTeachers}+
						</div>
						<div class="text-secondary-100 mt-1">
							Qualified Teachers
						</div>
					</TiltCard>
					<TiltCard
						client:visible
						className="col-span-2 sm:col-span-1 p-6"
					>
						<div
							class="text-4xl font-bold text-accent-600 dark:text-accent-400"
						>
							{dashboardStats.admin.totalClasses}
						</div>
						<div class="text-neutral-500 mt-1">Classes</div>
					</TiltCard>
					<TiltCard
						client:visible
						className="col-span-2 sm:col-span-1 p-6"
					>
						<div
							class="text-4xl font-bold text-neutral-900 dark:text-white"
						>
							{new Date().getFullYear() - schoolInfo.established}
						</div>
						<div class="text-neutral-500 mt-1">
							Years of Excellence
						</div>
					</TiltCard>
				</div>
			</div>
		</div>
	</section>

	<!-- Features Section -->
	<section id="features" class="py-20 bg-neutral-50 dark:bg-neutral-900/50">
		<div class="container mx-auto px-4">
			<div class="text-center mb-16">
				<span class="text-primary-600 dark:text-primary-400 font-medium"
					>Portal Features</span
				>
				<h2
					class="font-display text-display text-neutral-900 dark:text-white mt-2 mb-4"
				>
					Everything You Need
				</h2>
				<p
					class="text-neutral-600 dark:text-neutral-400 max-w-2xl mx-auto"
				>
					Our portal provides comprehensive tools for students,
					parents, teachers, and administrators to manage every aspect
					of school life.
				</p>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
				<!-- Feature Cards -->
				<TiltCard client:visible className="p-6 group">
					<div
						class="w-14 h-14 rounded-xl bg-primary-100 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform"
					>
						<svg
							class="w-7 h-7"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
							></path>
						</svg>
					</div>
					<h3
						class="font-semibold text-lg text-neutral-900 dark:text-white mb-2"
					>
						Result Management
					</h3>
					<p class="text-neutral-600 dark:text-neutral-400">
						View and download results with WAEC-style grading. Track
						academic progress term by term.
					</p>
				</TiltCard>

				<TiltCard client:visible className="p-6 group">
					<div
						class="w-14 h-14 rounded-xl bg-secondary-100 dark:bg-secondary-900/30 text-secondary-600 dark:text-secondary-400 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform"
					>
						<svg
							class="w-7 h-7"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
							></path>
						</svg>
					</div>
					<h3
						class="font-semibold text-lg text-neutral-900 dark:text-white mb-2"
					>
						Fee Management
					</h3>
					<p class="text-neutral-600 dark:text-neutral-400">
						Check fee payment status, view breakdowns, and download
						receipts instantly.
					</p>
				</TiltCard>

				<TiltCard client:visible className="p-6 group">
					<div
						class="w-14 h-14 rounded-xl bg-accent-100 dark:bg-accent-900/30 text-accent-600 dark:text-accent-400 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform"
					>
						<svg
							class="w-7 h-7"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
							></path>
						</svg>
					</div>
					<h3
						class="font-semibold text-lg text-neutral-900 dark:text-white mb-2"
					>
						Timetable Access
					</h3>
					<p class="text-neutral-600 dark:text-neutral-400">
						View class schedules, upcoming exams, and school events
						at a glance.
					</p>
				</TiltCard>

				<TiltCard client:visible className="p-6 group">
					<div
						class="w-14 h-14 rounded-xl bg-success-50 dark:bg-success-600/20 text-success-600 dark:text-success-500 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform"
					>
						<svg
							class="w-7 h-7"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
							></path>
						</svg>
					</div>
					<h3
						class="font-semibold text-lg text-neutral-900 dark:text-white mb-2"
					>
						Announcements
					</h3>
					<p class="text-neutral-600 dark:text-neutral-400">
						Stay updated with school news, notices, and important
						announcements.
					</p>
				</TiltCard>

				<TiltCard client:visible className="p-6 group">
					<div
						class="w-14 h-14 rounded-xl bg-warning-50 dark:bg-warning-600/20 text-warning-600 dark:text-warning-500 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform"
					>
						<svg
							class="w-7 h-7"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
							></path>
						</svg>
					</div>
					<h3
						class="font-semibold text-lg text-neutral-900 dark:text-white mb-2"
					>
						Multi-User Support
					</h3>
					<p class="text-neutral-600 dark:text-neutral-400">
						Separate dashboards for students, parents, teachers, and
						administrators.
					</p>
				</TiltCard>

				<TiltCard client:visible className="p-6 group">
					<div
						class="w-14 h-14 rounded-xl bg-danger-50 dark:bg-danger-600/20 text-danger-600 dark:text-danger-500 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform"
					>
						<svg
							class="w-7 h-7"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
							></path>
						</svg>
					</div>
					<h3
						class="font-semibold text-lg text-neutral-900 dark:text-white mb-2"
					>
						Secure Access
					</h3>
					<p class="text-neutral-600 dark:text-neutral-400">
						Role-based authentication ensures data privacy and
						security for all users.
					</p>
				</TiltCard>
			</div>
		</div>
	</section>

	<!-- Announcements Section -->
	<section id="announcements" class="py-20">
		<div class="container mx-auto px-4">
			<div class="text-center mb-16">
				<span class="text-primary-600 dark:text-primary-400 font-medium"
					>Latest News</span
				>
				<h2
					class="font-display text-display text-neutral-900 dark:text-white mt-2 mb-4"
				>
					School Announcements
				</h2>
			</div>

			<div
				class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto"
			>
				{
					announcements.slice(0, 3).map((announcement) => (
						<article class="card p-6 card-hover">
							<div class="flex items-center gap-2 mb-3">
								<span
									class={`badge ${announcement.priority === "high" ? "badge-danger" : "badge-info"}`}
								>
									{announcement.priority === "high"
										? "Important"
										: "Notice"}
								</span>
								<span class="text-xs text-neutral-500">
									{announcement.date}
								</span>
							</div>
							<h3 class="font-semibold text-neutral-900 dark:text-white mb-2">
								{announcement.title}
							</h3>
							<p class="text-sm text-neutral-600 dark:text-neutral-400 line-clamp-3">
								{announcement.content}
							</p>
							<p class="text-xs text-neutral-500 mt-4">
								â€” {announcement.author}
							</p>
						</article>
					))
				}
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section
		class="py-20 bg-gradient-to-br from-primary-600 to-primary-800 dark:from-primary-800 dark:to-primary-950"
	>
		<div class="container mx-auto px-4 text-center">
			<h2 class="font-display text-display text-white mb-4">
				Ready to Get Started?
			</h2>
			<p class="text-primary-100 mb-8 max-w-xl mx-auto">
				Login to access your personalized dashboard and manage your
				school activities with ease.
			</p>
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<a
					href="/login"
					class="btn bg-white text-primary-700 hover:bg-primary-50 px-8 py-4 text-lg"
				>
					Student Login
				</a>
				<a
					href="/login"
					class="btn border-2 border-white text-white hover:bg-white/10 px-8 py-4 text-lg"
				>
					Parent Login
				</a>
			</div>
		</div>
	</section>

	<!-- Footer -->
	<footer
		id="contact"
		class="bg-neutral-900 dark:bg-neutral-950 text-neutral-400 py-16"
	>
		<div class="container mx-auto px-4">
			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12">
				<!-- School Info -->
				<div class="lg:col-span-2">
					<div class="flex items-center gap-3 mb-4">
						<div
							class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-500 to-primary-700 flex items-center justify-center text-white font-bold text-lg"
						>
							U
						</div>
						<span class="font-display font-bold text-xl text-white">
							{schoolInfo.name}
						</span>
					</div>
					<p class="text-sm mb-4 max-w-md">
						{schoolInfo.motto}. Providing quality education to
						African youth since {schoolInfo.established}.
					</p>
					<p class="text-sm">{schoolInfo.address}</p>
				</div>

				<!-- Quick Links -->
				<div>
					<h4 class="font-semibold text-white mb-4">Quick Links</h4>
					<ul class="space-y-2 text-sm">
						<li>
							<a
								href="#about"
								class="hover:text-primary-400 transition-colors"
								>About Us</a
							>
						</li>
						<li>
							<a
								href="#features"
								class="hover:text-primary-400 transition-colors"
								>Features</a
							>
						</li>
						<li>
							<a
								href="#announcements"
								class="hover:text-primary-400 transition-colors"
								>Announcements</a
							>
						</li>
						<li>
							<a
								href="/login"
								class="hover:text-primary-400 transition-colors"
								>Portal Login</a
							>
						</li>
					</ul>
				</div>

				<!-- Contact -->
				<div>
					<h4 class="font-semibold text-white mb-4">Contact Us</h4>
					<ul class="space-y-2 text-sm">
						<li class="flex items-center gap-2">
							<svg
								class="w-4 h-4"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
								></path>
							</svg>
							{schoolInfo.phone}
						</li>
						<li class="flex items-center gap-2">
							<svg
								class="w-4 h-4"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
								></path>
							</svg>
							{schoolInfo.email}
						</li>
						<li class="flex items-center gap-2">
							<svg
								class="w-4 h-4"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
								></path>
							</svg>
							{schoolInfo.website}
						</li>
					</ul>
				</div>
			</div>

			<div
				class="border-t border-neutral-800 mt-12 pt-8 text-center text-sm"
			>
				<p>
					&copy; {new Date().getFullYear()}
					{schoolInfo.name}. All rights reserved.
				</p>
			</div>
		</div>
	</footer>

	<script>
		// Theme toggle
		document
			.getElementById("theme-toggle")
			?.addEventListener("click", () => {
				const html = document.documentElement;
				const isDark = html.classList.contains("dark");

				if (isDark) {
					html.classList.remove("dark");
					localStorage.setItem("theme", "light");
				} else {
					html.classList.add("dark");
					localStorage.setItem("theme", "dark");
				}
			});

		// Smooth scroll for anchor links
		document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
			anchor.addEventListener("click", function (e) {
				e.preventDefault();
				const href = this.getAttribute("href");
				if (href) {
					const target = document.querySelector(href);
					if (target) {
						target.scrollIntoView({ behavior: "smooth" });
					}
				}
			});
		});
	</script>
