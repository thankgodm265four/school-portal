---
import MainLayout from "../layouts/MainLayout.astro";
import LoginForm from "../components/auth/LoginForm.jsx";
import AuthScene3D from "../components/3d/AuthScene3D.jsx";
---

<MainLayout title="Login - Unity Secondary School Portal">
    <div
        class="min-h-screen flex items-center justify-center p-4 bg-gradient-to-br from-primary-50 via-white to-secondary-50 dark:from-neutral-950 dark:via-neutral-900 dark:to-primary-950 overflow-hidden relative"
    >
        <!-- 3D Background -->
        <AuthScene3D client:load />

        <!-- Background decorations (Fallback/Additional) -->
        <div
            class="absolute top-20 right-10 w-72 h-72 bg-primary-500/10 rounded-full blur-3xl"
        >
        </div>
        <div
            class="absolute bottom-20 left-10 w-96 h-96 bg-secondary-500/10 rounded-full blur-3xl"
        >
        </div>

        <div class="relative w-full max-w-md">
            <!-- Logo -->
            <div class="text-center mb-8">
                <a href="/" class="inline-flex items-center gap-3 group">
                    <div
                        class="w-14 h-14 rounded-2xl bg-gradient-to-br from-primary-500 to-primary-700 flex items-center justify-center text-white font-bold text-2xl shadow-xl shadow-primary-500/30 group-hover:scale-105 transition-transform"
                    >
                        U
                    </div>
                </a>
                <h1
                    class="mt-4 font-display text-2xl font-bold text-neutral-900 dark:text-white"
                >
                    Welcome Back
                </h1>
                <p class="mt-2 text-neutral-600 dark:text-neutral-400">
                    Login to access your school portal
                </p>
            </div>

            <!-- Login Form -->
            <LoginForm client:load />

            <!-- Footer links -->
            <div class="mt-8 text-center text-sm text-neutral-500">
                <p>
                    Having trouble logging in?
                    <a
                        href="#"
                        class="text-primary-600 hover:text-primary-700 font-medium"
                    >
                        Contact Admin
                    </a>
                </p>
                <p class="mt-4">
                    <a
                        href="/"
                        class="text-neutral-500 hover:text-neutral-700 dark:hover:text-neutral-300"
                    >
                        ‚Üê Back to Homepage
                    </a>
                </p>
            </div>
        </div>
    </div>
</MainLayout>
