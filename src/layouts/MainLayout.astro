---
import "../styles/global.css";

interface Props {
    title?: string;
    description?: string;
}

const {
    title = "Unity Secondary School - Portal",
    description = "A modern school management portal for African secondary schools",
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <!-- Preconnect to Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    </head>
    <body
        class="min-h-screen bg-neutral-50 dark:bg-neutral-950 transition-colors duration-300"
    >
        <!-- Theme initialization script -->
        <script is:inline>
            // Check for saved theme preference or default to system preference
            const savedTheme = localStorage.getItem("theme");
            const systemPrefersDark = window.matchMedia(
                "(prefers-color-scheme: dark)",
            ).matches;

            if (savedTheme === "dark" || (!savedTheme && systemPrefersDark)) {
                document.documentElement.classList.add("dark");
            }
        </script>

        <slot />

        <!-- Theme toggle script -->
        <script>
            // Theme toggle functionality
            function toggleTheme() {
                const html = document.documentElement;
                const isDark = html.classList.contains("dark");

                if (isDark) {
                    html.classList.remove("dark");
                    localStorage.setItem("theme", "light");
                } else {
                    html.classList.add("dark");
                    localStorage.setItem("theme", "dark");
                }
            }

            // Expose to global scope for React components
            (window as any).toggleTheme = toggleTheme;
        </script>
    </body>
</html>
